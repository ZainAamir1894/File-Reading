/*
0 - Date
1 - Region
2 - Rep ID
3 - Product
4 - Qty
5 - Unit Price
*/
import java.io.*;
import java.util.*;

public class AnotherSales{
    public static void main(String[] args) {
        try{
            //File Handling
            File file = new File("C:\\temp\\EVE01Sales.txt");
            Scanner sc = new Scanner(file);
            HashMap<String, Integer> prod = new HashMap<>();

            //Inside the file
            if(sc.hasNextLine()){
                sc.nextLine();
            }

            while(sc.hasNextLine()){
                String line = sc.nextLine().trim();

                String[] fields = line.split("\t");

                String productName = fields[3];
                int quantity = Integer.parseInt(fields[4]);
                int uPrice = Integer.parseInt(fields[5]);

                int amount = quantity*uPrice;

                if(!prod.containsKey(productName)){
                    prod.put(productName, 0);
                    prod.put(productName, prod.get(productName) + amount);
                }
            }

            System.out.println("Product-Wise Sales: \n");
            for(String it : prod.keySet()){
                System.out.println(it + " : " + prod.get(it));
            }

        } catch(IOException e){
            System.out.println("Error reading file.");
        }
    }
}
